{
    "configurations": [
        {
            "name": "Python Debugger: Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}"
        },
        {
            "name": "Python Run Main Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "run.py",
            "args": ["--intent=NexaIntent"]
        },
        {
            "name": "Python Run Test Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "run_test.py",
            "args": ["--intent=NexaIntent"]
        }

    ]
}